<div class="grid_8">
	
	<h1 class="blogPushDown">Blog.</h1>

	<% for post in @posts %>

		<div class="blogPost"> 
			<div class="blogHeader"> 
		    	<div class="blogHeading"> 
					<a href="/blog/<%= post.route %>"><h2><%= post.title %></h2></a> 
		        </div> 
		    	<div class="blogDate"> 
		    		<h4><%= post.created_at.day %>.<%= post.created_at.mon %>.<%= post.created_at.year %></h4> 
		    	</div> 
		    	<br class="clearfloat" /> 
			</div> 

			<%= CGI.unescape post.body %>

		</div>

	<% end %>
	
	<% if params[:page].blank? %>	
	
		<%	if @num_pages > 1 %>
			<a href="/blog/page/2" class="pagination">Older Entries</a>
		<% end %>
	<% elsif params[:page] == -1 %>
	<% else %>
	
		<%	if params[:page].to_i < @num_pages	%>
			<a href="/blog/page/<%= params[:page].to_i + 1 %>" class="pagination">Older Entries</a>
		<% end %>
	
		<%	if params[:page].to_i > 1	%>
			<a href="/blog/page/<%= params[:page].to_i - 1 %>" class="pagination">Newer Entries</a>
		<% end %>
	
	<% end %>
	
</div>
<div class="grid_1">&nbsp;</div>
<div class="grid_3 alignWithContent">
	
	<h3>Tags</h3>
	
	<ul>
	
	<% for tag in @tags %>
	
		<li><a href="/blog/tag/<%= tag.route %>"><%= tag.name %></a></li>

	<% end %>
	
	</ul>
	
</div>
<div class="clear"></div>

