<div class="grid_12"> 
 
	<form name="input" action="/blog" method="post">
	
	<input type="hidden" name="id" value="<%= @post.id %>" /><br />
	
	<input type="text" name="title" value="<%= @post.title %>" /><br />
	
	<input type="text" name="route" value="<%= @post.route %>" /><br />
	
	<textarea rows="15" cols="80" name="body">
		<%= unescape @post.body %>
	</textarea><br />
	
	<input type="submit" value="Submit" />
		
	</form>
    
</div>